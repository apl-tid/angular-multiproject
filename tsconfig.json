{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "lib": [
      "es2018",
      "dom"
    ],
    "paths": {
      "@common": [
        "dist/common/common",
        "dist/common"
      ],
      "@external-lib": [
        "dist/external-lib/external-lib",
        "dist/external-lib"
      ],
      "@app1/*": ["projects/app1/src/app/*"],
      "@app2/*": ["projects/app2/src/app/*"]
    }
  },
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true
  }
}